<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.VenueDetail">

    <ImageView
        android:id="@+id/iv_category"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="70dp"
        android:layout_marginHorizontal="60dp"
        android:src="@drawable/no_net"
        android:transitionName="iv_category"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:transitionName="tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textColor="#222222"
        android:gravity="center"
        android:text="اینترنت در دسترس نیست"
        android:fontFamily="@font/dana_fa_num_black"
        android:textSize="23sp"
        android:layout_marginTop="26dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_category" />

    <TextView
        android:id="@+id/tv_description"
        android:transitionName="tv_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="6dp"
        android:gravity="center"
        android:textColor="#666666"
        android:textSize="14sp"
        android:fontFamily="@font/dana_fa_num_bold"
        android:text="لطفا اینترنت خود را روشن کنید تا مکان‌های نزدیک شما به شما معرفی شود"
        android:textStyle="normal"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_title"
        app:layout_constraintStart_toStartOf="@+id/tv_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />



    <Button
        android:id="@+id/b_cellular"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginVertical="16dp"
        android:background="@drawable/button_teal_curve_without_border"
        android:text="برقراری ارتباط دیتای موبایل"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/b_wifi" />

    <Button
        android:id="@+id/b_wifi"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginVertical="30dp"
        android:text="روشن کردن وای‌فای"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/button_teal_curve_without_border"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="30dp" />

</androidx.constraintlayout.widget.ConstraintLayout>