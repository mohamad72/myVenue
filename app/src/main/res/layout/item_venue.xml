<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_category"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/place_library"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:text="کتابخانه جندی شاپور"
        android:textStyle="bold"
        android:textColor="#444444"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@+id/iv_category"
        app:layout_constraintTop_toTopOf="@+id/iv_category" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="سه راهی شاپرک، نرسیده به خیابان تیموری"
        android:textColor="#666666"
        android:textSize="10sp"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@+id/iv_category"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <TextView
        android:id="@+id/tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="883"
        android:textColor="#444444"
        android:textSize="13sp"
        android:textStyle="bold"
        android:layout_marginEnd="3dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_category"
        app:layout_constraintEnd_toStartOf="@+id/tv_unit_distance"
        app:layout_constraintTop_toTopOf="@+id/iv_category" />
    <TextView
        android:id="@+id/tv_unit_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="متر"
        android:textColor="#444444"
        android:textSize="10sp"
        android:layout_marginTop="2dp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/iv_category"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_category" />
</androidx.constraintlayout.widget.ConstraintLayout>